{
    "manifest_version": 3,
    "name": "Spotify Karaoke - Romanize & Translate Lyrics",
    "version": "1.0",
    "description": "Easily switch between Original, Romanized, and Translated Lyrics on Spotify Web Player.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "host_permissions": [
        "https://open.spotify.com/*",
        "https://translate.googleapis.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://open.spotify.com/*"
            ],
            "js": [
                "content/lib/transliteration.min.js",
                "content/translation.js",
                "content/modules/constants.js",
                "content/modules/eager_cache.js",
                "content/modules/script_detection.js",
                "content/modules/utils.js",
                "content/modules/state.js",
                "content/modules/shimmer.js",
                "content/modules/processor.js",
                "content/modules/ui.js",
                "content/modules/observer.js",
                "content/modules/attribution.js",
                "content/lib/kuroshiro.min.js",
                "content/lib/kuromoji.js",
                "content/lib/kuroshiro-analyzer-kuromoji.min.js",
                "content/lib/aromanize.js",
                "content/modules/romanization/japanese.js",
                "content/modules/romanization/korean.js",
                "content/modules/romanization/manager.js",
                "content/content.js"
            ],
            "css": [
                "content/style.css"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "spotify-karaoke@example.com",
            "strict_min_version": "140.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}